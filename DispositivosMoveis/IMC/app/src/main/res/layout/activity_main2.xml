        app:layout_constraintTop_toTopOf="@+id/textView3" />

    <TextView
        android:id="@+id/rslPeso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="119dp"
        android:layout_y="235dp"
