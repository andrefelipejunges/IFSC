<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity2">

    <TextView
        android:id="@+id/rslNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="121dp"
        android:layout_y="191dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/lblNome"
        app:layout_constraintTop_toTopOf="@+id/lblNome"
        tools:layout_editor_absoluteX="209dp" />

    <TextView
        android:id="@+id/rslAltura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="115dp"
        android:layout_y="289dp"
